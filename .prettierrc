{
  "printWidth": 200,
  "tabWidth": 2,
  "singleQuote": true,
  "semi": false,
  "jsxSingleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-astro"],
  "overrides": [
    { "files": ["*.svelte"], "options": { "parser": "svelte", "jsxSingleQuote": false, "singleQuote": true } },
    { "files": ["*.astro"], "options": { "parser": "astro", "jsxSingleQuote": false, "singleQuote": true } },
    { "files": ["*.yaml", "*.yml"], "options": { "parser": "yaml", "singleQuote": false } }
  ]
}
